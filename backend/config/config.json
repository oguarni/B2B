{
  "development": {
    "storage": "./test.db",
    "dialect": "sqlite",
    "logging": false,
    "pool": {
      "max": 5,
      "min": 0,
      "acquire": 30000,
      "idle": 10000
    }
  },
  "test": {
    "use_env_variable": "TEST_DATABASE_URL",
    "dialect": "postgres",
    "logging": false,
    "dialectOptions": {
      "ssl": false
    },
    "pool": {
      "max": 5,
      "min": 0,
      "acquire": 30000,
      "idle": 10000
    }
  },
  "production": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "logging": false,
    "dialectOptions": {
      "ssl": {
        "require": true,
        "rejectUnauthorized": false
      },
      "connectTimeout": 120000
    },
    "pool": {
      "max": 20,
      "min": 5,
      "acquire": 60000,
      "idle": 10000
    },
    "retry": {
      "match": [
        "ECONNRESET",
        "ENOTFOUND", 
        "ECONNREFUSED",
        "EHOSTUNREACH",
        "ETIMEDOUT"
      ],
      "max": 5
    }
  }
}